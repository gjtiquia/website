---
interface Props {
    title: string;
    description: string;
    href: string;
}

const { title, description, href } = Astro.props;
---

<li class="size-full group">
    <a
        href={href}
        target="_blank"
        class="size-full border border-slate-800 bg-slate-900 hover:border-sky-400/30 hover:bg-slate-900/50 transition-all flex flex-col gap-2 rounded-lg p-4"
    >
        <h2 class="text-sky-400 font-bold">{title}</h2>
        <p class="text-slate-400 group-hover:text-slate-300 transition-colors">
            <slot>{description}</slot>
        </p>
    </a>
</li>
