---
interface Props {
    name: string;
}

const { name } = Astro.props;
---

<span
    class="bg-slate-800 text-sky-400 px-3 py-1 rounded text-sm inline-block transform transition-all duration-300 hover:bg-slate-700 hover:text-sky-300 hover:scale-110 hover:shadow-lg hover:shadow-sky-900/30 hover:-translate-y-1 cursor-default"
>
    {name}
</span>
