---
interface Props {
    title: string;
    description: string;
}

const { title, description } = Astro.props;
---

<div class="border border-surface bg-surface rounded-lg p-4 text-center">
    <h3 class="text-text font-bold mb-2">
        {title}
    </h3>
    <p class="text-subtle text-sm">
        {description}
    </p>
</div>
