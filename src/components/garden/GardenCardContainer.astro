---
interface Props {
    title: string;
}

const { title } = Astro.props;
---

<section
    class="w-full max-w-2xl border border-slate-800 bg-slate-900/50 backdrop-blur-md flex flex-col gap-4 rounded-lg p-4"
>
    <h2 class="text-sky-400 font-bold font-mono">{title}</h2>
    <ul class="flex flex-col gap-4">
        <slot />
    </ul>
</section>
<div class="py-3 sm:py-6"></div>
