---
interface Props {
    href: string;
    title: string;
    description: string;
}

const { href, title, description } = Astro.props;
---

<li class="group">
    <a
        href={href}
        class="size-full block border border-slate-800 bg-slate-900 hover:border-sky-400/30 hover:bg-slate-900/50 transition-all flex flex-col gap-3 items-center rounded-lg p-4 sm:p-6"
    >
        <h3 class="text-sky-400 font-bold text-xl">
            {title}
        </h3>
        <p
            class="text-center text-slate-400 group-hover:text-slate-300 transition-colors"
        >
            {description}
        </p>
    </a>
</li>
